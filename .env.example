# Flask Configuration
FLASK_DEBUG=False
PORT=5000

# Azure OpenAI Configuration (for future integration)
AZURE_OPENAI_ENDPOINT=your_endpoint_here
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_DEPLOYMENT=your_deployment_name_here

# Azure OpenAI Realtime API Configuration (for voice conversations)
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-realtime
AZURE_OPENAI_REALTIME_API_VERSION=2024-10-01-preview


# Native MCP Server Configuration (optional)
# Set USE_NATIVE_MCP=true to let the Realtime API call MCP servers directly
# This requires MCP servers to be running as HTTP services with accessible URLs

#Run MCP servers locally for testing:
# cd c:\Git\Pokedex\Pokedex\poke-mcp
# node dist/index.js --http --port=3001

# cd c:\Git\Pokedex\Pokedex\ptcg-mcp
# node dist/index.js --http --port=3002

# Native MCP is experimental and may not work with Azure OpenAI
# Set to false for reliable client-side tool handling
USE_NATIVE_MCP=false
